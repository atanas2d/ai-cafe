{
  "terminal.integrated.defaultProfile.osx": "Bash (workspace)",
  "terminal.integrated.profiles.osx": {
    "Bash (workspace)": {
      "path": "/bin/bash",
      "args": ["--rcfile", "${workspaceFolder}/.vscode/bashrc", "-i"]
    },
    "bash": {
      "path": "/bin/bash",
      "args": ["-l"]
    }
  },

  // Practical UX tweaks
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 20000,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.rightClickBehavior": "paste",
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.drawBoldTextInBrightColors": true,

  // Vibrant terminal ANSI colors (Nord-inspired)
  "workbench.colorCustomizations": {
    "terminal.ansiBlack": "#3B4252",
    "terminal.ansiRed": "#BF616A",
    "terminal.ansiGreen": "#A3BE8C",
    "terminal.ansiYellow": "#EBCB8B",
    "terminal.ansiBlue": "#81A1C1",
    "terminal.ansiMagenta": "#B48EAD",
    "terminal.ansiCyan": "#88C0D0",
    "terminal.ansiWhite": "#E5E9F0",
    "terminal.ansiBrightBlack": "#4C566A",
    "terminal.ansiBrightRed": "#D57780",
    "terminal.ansiBrightGreen": "#B4D0A8",
    "terminal.ansiBrightYellow": "#F0D399",
    "terminal.ansiBrightBlue": "#8FBCBB",
    "terminal.ansiBrightMagenta": "#C0A7C3",
    "terminal.ansiBrightCyan": "#97D0D7",
    "terminal.ansiBrightWhite": "#ECEFF4"
  }
}
